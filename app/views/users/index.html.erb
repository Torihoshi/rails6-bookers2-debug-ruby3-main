<!--users/index.html ユーザー一覧画面-->
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <!--左側部分-->
    <div class='col-md-3'>
      <!--ユーザー情報-->
      <h2>User info</h2>
      <%= render 'info', user: current_user %>
      <!--新規投稿欄-->
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>

    <!--右側部分-->
    <div class='col-md-8 offset-md-1'>
      <!--ユーザー一覧-->
      <h2>Users</h2>
      <%= render 'index',users: @users %>
    </div>

  </div>
</div>