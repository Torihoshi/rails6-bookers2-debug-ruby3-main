<!--ユーザー一覧-->
<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td>フォロー数: <%= user.following_user.count %></td>
        <td>フォロワー数: <%= user.follower_user.count %></td>
        <td>
          <% if current_user != user && current_user.following?(user) %>
            <%= link_to 'Unfollow', user_relationship_path(user), method: :delete, class: "unfollow_btn user_#{user.id}" %>
          <% elsif current_user != user %>
            <%= link_to 'Follow', user_relationships_path(user), method: :post, class: "follow_btn user_#{user.id}" %>
          <% end %>
        </td>
        <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>