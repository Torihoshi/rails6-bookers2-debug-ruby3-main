<h1>Follower Users</h1>

<% if @follower_users.empty? %>
  <p>ユーザーはいません。</p>
<% else %>
  <table class='table'>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @follower_users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= user.name %></td>
          <td>フォロー数: <%= user.following_user.count %></td>
          <td>フォロワー数: <%= user.follower_user.count %></td>
          <td><%= link_to "Show", user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>